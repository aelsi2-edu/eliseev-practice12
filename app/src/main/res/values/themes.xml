<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Practice12" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_color_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/status_bar</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="bottomSheetDialogTheme">@style/Theme.Practice12.BottomSheetDialog</item>
    </style>
    <style name="Theme.Practice12.Settings" parent="Theme.Practice12">
        <item name="android:windowBackground">@color/background_settings</item>
    </style>
    <style name="Theme.Practice12.TextField" parent="Theme.Practice12">
        <item name="android:textColor">@color/text_field_color</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="Theme.Practice12.PasswordField" parent="Theme.Practice12">
        <item name="android:textColor">@color/password_field_color</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="Theme.Practice12.TextButton" parent="Theme.Practice12">
        <item name="android:textColor">@color/text_button_color</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="Theme.Practice12.Drawer.Text" parent="Theme.Practice12">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Theme.Practice12.Drawer.Text.City" parent="Theme.Practice12.Drawer.Text">
        <item name="android:textStyle">normal</item>
    </style>
    <style name="Theme.Practice12.Drawer.Text.Name" parent="Theme.Practice12.Drawer.Text">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Theme.Practice12.Drawer.Item" parent="Theme.Practice12.Drawer.Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/drawer_item_background</item>
    </style>
    <style name="Theme.Practice12.Settings.Name" parent="Theme.Practice12">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.Practice12.Timer" parent="Theme.Practice12">
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.Practice12.Settings.Stat" parent="Theme.Practice12.Settings.Name">
        <item name="android:textSize">22sp</item>
    </style>
    <style name="Theme.Practice12.Settings.StatName" parent="Theme.Practice12.Settings.Name">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white_semitransparent</item>
    </style>
    <style name="Theme.Practice12.Settings.Email" parent="Theme.Practice12">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/settings_email_color</item>
    </style>
    <style name="Theme.Practice12.Settings.TextButton" parent="Theme.Practice12">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.Practice12.History.ItemText" parent="Theme.Practice12">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/history_item</item>
    </style>
    <style name="Theme.Practice12.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background_lighter</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.Practice12</item>
    </style>
    <style name="Theme.Practice12.Button" parent="Theme.Practice12">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/button_drawable</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="Theme.Practice12.Button.Yellow" parent="Theme.Practice12.Button">
        <item name="android:background">@drawable/yellow_button</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="Theme.Practice12.Button.Purple" parent="Theme.Practice12.Button.Yellow">
        <item name="android:background">@drawable/purple_button</item>
    </style>
    <style name="Theme.Practice12.Button.BottomSheet.Normal" parent="Theme.Practice12.Button">
        <item name="android:background">@drawable/bottom_sheet_panel</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="Theme.Practice12.Button.BottomSheet.Yellow" parent="Theme.Practice12.Button.BottomSheet.Normal">
        <item name="android:background">@drawable/bottom_sheet_panel_yellow</item>
    </style>
    <style name="Theme.Practice12.BottomSheet.PanelTopText" parent="Theme.Practice12">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.Practice12.BottomSheet.PanelBottomText" parent="Theme.Practice12">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:opacity">translucent</item>
        <item name="android:alpha">0.56</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Theme.Practice12.BottomSheet.HeaderText" parent="Theme.Practice12">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Theme.Practice12.Toolbar.Style" parent="Theme.Practice12">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">128dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:elevation">5dp</item>
    </style>
    <style name="Theme.Practice12.Toolbar.Theme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/background_darker</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>
    <style name="Theme.Practice12.BottomSheetDialog"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CarBottomSheetStyle</item>
    </style>

    <style name="CarBottomSheetStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/car_bottom_sheet_bg</item>
    </style>
</resources>